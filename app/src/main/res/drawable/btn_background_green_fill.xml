<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- 녹색 배경 -->
            <corners android:radius="4dp"/> <!-- 모서리 둥글기 -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/> <!-- 패딩 -->
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"/> <!-- 테두리 -->
        </shape>
    </item>

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C"/> <!-- 눌렀을 때 더 어두운 녹색 -->
            <corners android:radius="4dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"/>
        </shape>
    </item>
</selector>
