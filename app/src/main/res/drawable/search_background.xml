<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 포커스 상태 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFEEEEEE"/> <!-- 포커스 시 배경색 -->
            <corners android:radius="10dp"/> <!-- 모서리 둥글기 -->
            <stroke android:width="2dp" android:color="#FF0000FF"/> <!-- 테두리 색과 두께 -->
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF"/> <!-- 기본 배경색 -->
            <corners android:radius="10dp"/> <!-- 모서리 둥글기 -->
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- 테두리 색과 두께 -->
        </shape>
    </item>
</selector>
